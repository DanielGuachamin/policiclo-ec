<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="policiclo.RecuperarContra">
    <ContentPage.Content>
        <StackLayout Padding="15"
                     VerticalOptions="Center">
            
            <Frame>
                <StackLayout>
                    <Label HorizontalOptions="CenterAndExpand"
                   Text="Cambiar/Recuperar Contraseña"
                   FontSize="30"
                   FontAttributes="Bold"
                   TextColor="Black"
                           HorizontalTextAlignment="Center"
                   VerticalOptions="Center" 
                    />
                    <Entry Placeholder="Ingrese su correo"                                              PlaceholderColor="#979292"

                           TextColor="Black"
                   x:Name="TxtCorreo"/>
                    <Button Text="Recuperar contraseña"
                    x:Name="RecoverButton"
                    Clicked="recoverButton_Clicked"/>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>